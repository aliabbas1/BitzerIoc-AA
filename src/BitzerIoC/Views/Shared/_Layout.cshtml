<!DOCTYPE html>
<html data-ng-app="BitzerUserModule">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title ng-bind="title"></title>

    <environment names="Development,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

        <script src="~/lib/angular-route/angular-route.js"></script>
        <script src="~/spa/app.js"></script>

        <script src="~/spa/controllers/userDashboardController.js"></script>
        <script src="~/spa/controllers/profileController.js"></script>
        <script src="~/spa/services/BitzerIocUserService.js"></script>

        <script src="~/spa/controllers/nevigationController.js"></script>

        <script src="~/js/site.js"></script>

        <script src="~/js/utilityhelper.js"></script>
        <base href="/">
    </environment>
</head>
<body>

    <div class="navbar navbar-inverse">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="menu-button"></a>
            <a class="navbar-brand">BITZER IoC</a>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav"></ul>

        </div>
    </div>

    @* Nevigation Controller Content *@
    <div class="sidemenubar">
        <div class="col-sm-2">
            <div id="menu" class="table-responsive remove collapse navbar-collapse" ng-controller="nevigationController">
                <ul id="menu-ul" class="nav navbar-left">
                    @* add two anchor(a) tags links in each list(li) element, one link(a tag) for desktop view and other link(a tag) for tablet, mobile view *@
                    @* "hidden-xs" class is hidden in extra small devices(tablet, mobile) i.e <768px and visible in >=768px devices *@
                    @* "visible-xs" class is visible in extra small devices(tablet, mobile) i.e <768px and hide in >=768px devices  *@
                    @* Author: Ali Abbas , version 1.0 *@

                    <li class="myaccount">
                        <a class="hidden-xs" href="{{ProfileLinkUrl}}">{{ProfileLinkText}}</a>
                        <a class="visible-xs" data-toggle="collapse" data-target=".navbar-collapse" href="{{ProfileLinkUrl}}">{{ProfileLinkText}}</a>
                    </li>

                    <li class="logout">
                        <a class="hidden-xs" href="{{LogoutLinkUrl}}" target="_self">{{LogoutLinkText}}</a>
                        <a class="visible-xs" href="{{LogoutLinkUrl}}" target="_self" data-toggle="collapse" data-target=".navbar-collapse">{{LogoutLinkText}}</a>
                    </li>

                    <li class="pin pin-down">
                        <a href=""></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @* / Nevigation Controller Content *@

    <div class="col-sm-10">
        <div class="body-content">
            @RenderBody()
        </div>
    </div>

    <environment names="Development">

    </environment>
    <environment names="Staging,Production">
    @{ 
        //ToDo: Pending Issue, Jquery loading twice so manage environemnt
    }    
